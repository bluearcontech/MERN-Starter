{
  "name": "mern-starter",
  "version": "1.0.0",
  "description": "Get started with MERN (MongoDB, ExpressJS, React, NodeJS)",
  "main": "index.js",
  "scripts": {
    "prestart": "rm -rf dist && npm run build:server && npm run build:prod",
    "prestart:dev": "npm run build:dev",
    "build:prod": "NODE_ENV=production webpack --config config/webpack.app.prod.config.js",
    "build:dev": "webpack --config config/webpack.app.dev.config.js",
    "build:server": "NODE_ENV=production webpack --config config/webpack.server.config.js",
    "start": "NODE_ENV=production node dist/server.js",
    "start:dev": "babel-node server",
    "test": "npm run eslint:src",
    "eslint:src": "eslint ./app ./server; exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goldenforstle/MERN-Starter.git"
  },
  "keywords": [
    "mongodb",
    "expressjs",
    "react",
    "nodejs"
  ],
  "author": "Ionescu Bebe",
  "license": "MIT",
  "bugs": {
    "url": ""
  },
  "homepage": "https://github.com/goldenforstle/MERN-Starter.git",
  "pre-commit": [
    "test"
  ],
  "pre-push": [
     "test"
  ],
  "dependencies": {
    "css-loader": "^0.26.1",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.2.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^5.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "extend": "^3.0.0",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "react-hot-loader": "^3.0.0-beta.2",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.16.1"
  }
}
